<Window
    x:Class="Pract11_Eliseev.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Pract11_Eliseev"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="600"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*" />
                <ColumnDefinition Width="50*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="50*" />
                <RowDefinition Height="50*" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="1" Grid.ColumnSpan="2">
                <Button
                    Height="70"
                    Margin="15"
                    Content="2+2" Click="plusClick" />
                <Button
                    Height="70"
                    Margin="15"
                    Content="abba"
                    Click="abbaClick"/>
            </StackPanel>

            <StackPanel>
                <Button Click="aboutProgram" Content="О программе" Height="50" Margin="45"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
